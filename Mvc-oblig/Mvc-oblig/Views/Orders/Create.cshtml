@model Mvc_oblig.Models.Order

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <table>
                    <tr><td>Card Number: </td><td><input type="text" pattern="[0-9]{16}" /></td></tr>
                    <tr><td>Confirmation number: </td><td><input type="text" pattern="[0-9]{3}" /></td></tr>
                    <tr><td>Expiry Date:</td><td><input type="text" pattern="[0-9]{2}" /></td><td>/</td><td><input type="text" pattern="[0-9]{2}" /></td></tr>
                    <tr><td>Card Holder Name: </td><td><input type="text"/></td></tr>
                </table>
                    <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
