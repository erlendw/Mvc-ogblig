
@{
    ViewBag.Title = "UserProfile";
}

@{Mvc_oblig.Models.Customer customer = (Mvc_oblig.Models.Customer)HttpContext.Current.Session["CurrentUser"]; }

<ul class="list-group fifty">

    <li class="list-group-item active">
        <h2>User Profile</h2>
    </li>

    <li class="list-group-item">
        Mail address: @customer.Mail
    </li>
    <li class="list-group-item">
        First name: @customer.FirstName
    </li>
    <li class="list-group-item">
        Last name: @customer.LastName
    </li>
    <li class="list-group-item">
        Address: @customer.PostalArea
    </li>
</ul>

<div>
    <a href="/Customer/Edit">Update user information</a>
</div>
