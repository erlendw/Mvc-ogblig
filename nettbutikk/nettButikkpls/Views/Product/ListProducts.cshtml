@model List<nettButikkpls.Models.Product>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListProducts</title>
</head>

<header class="header-image">
    <div class="headline">
        <div class="container">
            <h1>Organic Health Tea</h1>
            <h2>Cleansing your soul, one drop at a time</h2>
        </div>
    </div>
</header>

 <hr class="featurette-divider">

    <div class="container">
        <h2>Her er alle dataene til kundetabellen:</h2>
        <div class="col-md-12">
            <div class="row">

                @foreach (var product in Model)
            {
                    <div class="col-sm-4 col-lg-4 col-md-4">

                        <div class="thumbnail">
                            <img src="http://placehold.it/320x150" alt="">
                            <div class="caption">
                                <h4 class="pull-right">$@product.price</h4>

                                <h4>
                                    <a href="#">@product.productname</a>
                                </h4>
                                <p>@product.category</p>
                            </div>
                            <a href="#" class="btn btn-primary btn-success" id="tea_@product.productid"><span class="glyphicon glyphicon-usd"></span> Buy Now!</a>
                        </div>
                    </div>
                }
            </div>
            <a href="/Product/RegProduct">Registrer nytt produkt</a>


</html>
