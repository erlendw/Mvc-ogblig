@model nettButikkpls.Models.Customer



@{
    ViewBag.Title = "EditCustomer";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>EditCustomer</h2>

<div class="col-md-6 col-md-offset-3">

    <h2 class="form-signin-heading">Update product information</h2>

    <form class="form-horizontal" action="/Admin/UpdateProduct" method="post">


        <div class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.customerId" name="productid" readonly>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.firstname" name="productid">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="@Model.lastname" name="Name">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="@Model.address" name="Price">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="@Model.postalarea" name="Price">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="@Model.zipcode" name="Category">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Update Information" />
            </div>
        </div>
    </form>

</div>