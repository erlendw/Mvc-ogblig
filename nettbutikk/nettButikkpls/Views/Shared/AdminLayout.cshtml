<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    <title>@ViewBag.Title - Admin</title>
    @Styles.Render("~/Content/css")



</head>
<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
                @Html.ActionLink("The Tea Shop", "ListProducts", "Product", new { area = "" }, new { @class = "navbar-brand lobster" })
               
            </div>
            <!-- Top Menu Items -->
           <ul class="nav navbar-right top-nav navbar-inverse">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> John Galt <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#"><i class="fa fa-fw fa-user"></i>Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-shopping-cart"></i>Orders</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-diamond"></i>Products</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">

                    <li>
                        <a href="/Admin/ListCustomers"><i class="fa fa-fw fa-user"></i> Users</a>
                    </li>
                    <li>
                        <a href="/Admin/ListOrders"><i class="fa fa-fw fa-shopping-cart"></i> Orders</a>
                    </li>
                    <li>
                        <a href="/Admin/ListProducts"><i class="fa fa-fw fa-diamond"></i> Products</a>
                    </li>
                    <li>
                        <a href="/Product/RegProduct"><i class="fa fa-fw fa-barcode"></i> Add Products</a>
                    </li>
                 </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- All content goes in here -->

                <div class="body-content">

                    @RenderBody()

                </div>

              
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>