@{
    ViewBag.Title = "View";
    Layout = null;
}
@model nettButikkpls.Models.Cart

<!DOCTYPE html>

<html>
@Styles.Render("~/Content/css")
<head>
    <meta name="viewport" content="width=device-width" />
    <title>addOrder</title>

</head>
<body>
  
        <div class="col-md-6 col-md-offset-3">

            <h2 class="form-signin-heading">Thank you for your purchase!</h2>

            <table class="table table-striped table-condensed">
                <thead>
                    <tr>

                        <th>Product ID</th>
                        <th>Productname</th>
                        <th>Price</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.count.Count; i++)
                    {


                        <tr>
                            <td>@Model.products[i].productid</td>
                            <td>@Model.products[i].productname</td>
                            <td>$@Model.products[i].price</td>
                            <td>@Model.products[i].category</td>
                        </tr>

                    }

                </tbody>
            </table>

            <form class="form-horizontal" action="/Orders/NullCart" method="post">

                <div class="form-group">
                    <div class="col-md-6 col-md-offset3">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Back to the store" />
                    </div>
                </div>
            </form>
        </div>
</body>
</html>
