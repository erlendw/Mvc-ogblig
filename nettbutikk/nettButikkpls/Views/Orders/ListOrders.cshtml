@model List<nettButikkpls.Models.Order>


<div class="container">

    <div class="spacer">

        <h2>Your orders!</h2>
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer ID</th>
                    <th>Total</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var order in Model)
            {


                    <tr>

                        <td>@order.orderId</td>
                        <td>@order.customerId</td>
                        <td>@order.sumtotal</td>
                        <td>@order.timestamp</td>
                    </tr>

                }

            </tbody>
        </table>

    </div>
</div>


