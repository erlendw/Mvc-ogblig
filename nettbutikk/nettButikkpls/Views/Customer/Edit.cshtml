@{nettButikkpls.Models.Customer customer = (nettButikkpls.Models.Customer)HttpContext.Current.Session["CurrentUser"]; }

<div class="container">

    <div class="spacer">

        <div class="col-md-6 col-md-offset-3">

            <h2 class="form-signin-heading">Update your contact information</h2>

            <form class="form-horizontal" action="/Customer/UpdateCustomer" method="post">
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="@customer.email" name="Mail">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placehlder="@customer.firstname" name="Firstname">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="@customer.lastname" name="Lastname">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="@customer.address" name="Address">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Update Information" />
                    </div>
                </div>
            </form>

        </div>


    </div>

</div>
